<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario.Login">

    <EditText
        android:id="@+id/editEmailLogin"
        android:layout_width="281dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/redondintext"
        android:ems="10"
        android:hint="    Email:"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tVResetar"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="18dp"
        android:text="Esqueceu sua Senha?"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaLogin" />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNovoUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogar" />

    <EditText
        android:id="@+id/editSenhaLogin"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/redondintext"
        android:ems="10"
        android:hint="    Senha:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editEmailLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/editEmailLogin"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/buttonNovoUsuario"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/redondin"
        android:text="Novo Usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarLogin"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/progressBarLogin"
        app:layout_constraintTop_toBottomOf="@+id/progressBarLogin" />

    <Button
        android:id="@+id/buttonLogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/redondin"
        android:text="Entrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVResetar" />

</androidx.constraintlayout.widget.ConstraintLayout>